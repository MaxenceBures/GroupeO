
<div class="modal" id="modal_module_search" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4><label>Ajout de modules :</label></h4>
            </div>
            <div class="modal-body">
                <div>
                    <label>Recherche : </label>
                </div>
                <div class="row">
                    <div class="col-md-5">
                        <select class="form-control select2" name="formation" required id="formation-search" placeholder="Formation" >
                            <option value=""></option>
                            {% for formation in formations %}
                                <option value="{{ formation.id }}" data-long="{{ formation.long }}">
                                    {{ formation.court }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-4">
                        <input class="form-control" type="text" name="libelle" id="libelle-search" placeholder="Recherche par libellé"/>
                    </div>
                    <div class="col-md-3">
                        <button class="btn btn-default btn-flat pull-right" type="button" id="bt-search"><i class="fa fa-search"></i> Rechercher</button>
                    </div> 
                </div>
                <hr>
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-striped table-bordered" width="100%" cellspacing="0" id="table-modules-search">
                            <thead>
                                <tr>
                                    <th>Formation</th>
                                    <th width="45%">Libellé</th>
                                    <th width="5%">Durée</th>
                                    <th width="5%"></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
                <div class="row hidden" id="error-content">
                </div>
                <br>
            </div>
            <div class="modal-footer">
                <span class="pull-right"><a href="#" class="flip-link btn btn-default" data-dismiss="modal" onclick='getCours()'>Fermer</a></span>
            </div>
        </div>
        <!-- /.modal_password -->
    </div>
</div><!-- /.frame_planning-box -->