{% extends 'layout.html.twig' %}

{% block body %}
    <H1>Planning Global</H1>
    <div class="row">
        <div class="col-md-3">
            <select id="select_lieu" class="form-control" style="width: 300px;">
            </select>
        </div>
        <div class="col-md-1">
            <button id="btn_refresh" class="form-control">Rafraichir</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box box-default">
                <div class="box-body">
                    <div id="calendar" class="fc fc-unthemed fc-ltr">
                    </div>
                </div>
                <div class="overlay">
                    <i class="fa fa-refresh fa-spin"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="modal_alternant" tabindex="-1" role="dialog">
        <form id="change_status" action="#" class="">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" id="btn_close_1" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h3>Listes des alternants</h3>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12">
                                <table id="liste_alternants" class="table table-striped table-bordered" width="100%" cellspacing="0">
                                    <thead>
                                    <tr>
                                        <th >Nom</th>
                                        <th >Prenom</th>
                                        <th style="width: 150px;">Action</th>
                                    </tr>
                                    </thead>
                                    <tbody id="liste_alternants_ligne">

                                    </tbody>
                                </table>
                                <i class="fa fa-fw fa-users" id="nb_user"></i>
                            </div>
                        </div>

                    <div class="modal-footer">
                        <span class="pull-left"><a href="#" class="flip-link btn btn-default" id="btn_close_2">Fermer</a></span>
                    </div>
                </div>
            </div>
        </form>
    </div>


{% endblock %}

