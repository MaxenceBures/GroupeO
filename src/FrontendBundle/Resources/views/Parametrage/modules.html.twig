{% extends 'layout.html.twig' %}

{% block body %}
    <H1>Paramètrage</H1>

    <div class="row">
        <div class="col-md-6">
            <div class="col">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">Fermetures</h3>
                        <div class="box-body">
                            <form action="#" method="get" class="form-horizontal">

                                <div class="row" style="margin-top: 30px;">
                                    <div class="col-xs-1">
                                        Du
                                    </div>

                                    <div class="col-xs-4">
                                        <div class="input-group date">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            <input class="form-control pull-right" id="date_deb" type="text">
                                        </div>
                                    </div>

                                    <div class="col-xs-1">
                                        Au
                                    </div>

                                    <div class="col-xs-4">
                                        <div class="input-group date">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            <input class="form-control pull-right" id="date_fin" type="text">
                                        </div>
                                    </div>

                                </div>

                                <div class="row" style="margin-top: 30px;">
                                    <div class="col-xs-12">
                                        <input class="form-control" placeholder="Description" type="text" id="input_description">
                                    </div>
                                </div>

                                <div class="row" style="margin-top: 30px;">
                                    <div class="col-xs-5">
                                        <select id="select_lieu" class="form-control" style="width: 300px;">

                                        </select>
                                    </div>


                                    <div class="col-xs-2">
                                    </div>

                                    <div class="col-xs-2">
                                        <button id="save_datas" class="btn btn-success">Sauvegarder</button>
                                    </div>
                                </div>

                                <div class="row" style="margin-top: 30px;">
                                    <div class="col-xs-12">
                                        <table id="liste_fermeture" class="table table-striped table-bordered" width="100%" cellspacing="0">
                                            <thead>
                                            <tr>
                                                <th>Description</th>
                                                <th>Debut</th>
                                                <th>Fin</th>
                                                <th>Centre</th>
                                                <th>Action</th>
                                            </tr>
                                            </thead>
                                            <tbody id="liste_fermeture_ligne">

                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="col">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">Modules Indépendants</h3>
                        <div class="box-body">
                            <form action="#" method="get" class="form-horizontal">
                                <div class="row">
                                    <div class="col-xs-8">
                                        <input class="form-control" placeholder="Libelle Long" type="text" id="input_libelle_long">
                                    </div>

                                    <div class="col-xs-2">
                                        <button id="save_datas_modules_ajouter" class="btn btn-success">Ajouter</button>
                                    </div>

                                    <div class="col-xs-2">
                                        <button id="save_datas_modules_modifier" class="btn btn-success">Modifier</button>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-xs-4">
                                        <input class="form-control" placeholder="Libelle Court" type="text" id="input_libelle_court">
                                    </div>
                                </div>

                                <div class="row" style="margin-top: 30px;">
                                    <div class="col-xs-12">
                                        <table id="liste_module" class="table table-striped table-bordered" width="100%" cellspacing="0">
                                            <thead>
                                            <tr>
                                                <th>Nom</th>
                                                <th>Durée Réelle</th>
                                                <th>Durée Prévue</th>
                                                <th style="width: 250px;">Actions</th>
                                            </tr>
                                            </thead>
                                            <tbody id="liste_module_ligne">

                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="col">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">Indicateur</h3>
                        <div class="box-body">
                            <div class="col-xs-8">
                                Nombre d'alternant / Cours
                            </div>
                            <div class="col-xs-2">
                                <input class="form-control" placeholder="Nombre" type="text" id="input_indicateur">
                            </div>
                            <div class="col-xs-2">
                                <button id="save_indicateur" class="btn btn-success">Modifier</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-12">
            <div class="col">
                <div class="box box-default">
                    <div class="box-header with-border">
                        <h3 class="box-title">Dépendance des modules</h3>
                        <div class="box-body">
<div class="box-body">
                        <div class="row">
                            <div class="col-md-4">
                                <select id="select-formation-module" class="form-control" >
                                    <option value=""></option>
                                </select>
                            </div>
                            <div class="col-md-6"></div>
                            <div class="col-md-2">
                                <button class="btn btn-default ">Annuler</button>
                                <button class="btn btn-success ">Sauvegarder</button>
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-md-5">
                                <table class="table table-responsive table-bordered table-striped" id="table-modules">
                                    <thead>
                                        <tr>
                                            <th>Module</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-md-7">
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal" id="modal_modules" tabindex="-1" role="dialog">
        <form id="change_status" action="#" class="">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" id="btn_close_1" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h3>Plannification du module</h3>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-12">
                                <table id="liste_plannification_module" class="table table-striped table-bordered" width="100%" cellspacing="0">
                                    <thead>
                                    <tr>
                                        <th>Dates</th>
                                        <th style="width: 150px;">Centre</th>
                                        <th style="width: 150px;">Action</th>
                                    </tr>
                                    </thead>
                                    <tbody id="liste_cours_ligne">

                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-1">
                                Du
                            </div>

                            <div class="col-xs-4">
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input class="form-control pull-right" id="date_plannification_deb" type="text">
                                </div>
                            </div>

                            <div class="col-xs-1">
                                Au
                            </div>

                            <div class="col-xs-4">
                                <div class="input-group date">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input class="form-control pull-right" id="date_plannification_fin" type="text">
                                </div>
                            </div>
                        </div>
                        <div class="row" id="row_duree">

                            <div class="col-xs-1"></div>

                            <div class="col-xs-4">
                                <input class="form-control" placeholder="Durée Prévue  (Heures)" type="text" id="input_heure_prevue">
                            </div>

                            <div class="col-xs-1"></div>

                            <div class="col-xs-4">
                                <input class="form-control" placeholder="Durée Réelle (Heures)" type="text" id="input_heure_reelle">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-1"></div>

                        <div class="col-xs-5">
                            <select id="select_planning_lieu" class="form-control" style="width: 300px;">

                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="modal-footer">
                            <span class="pull-left"><a href="#" class="flip-link btn btn-default" id="btn_close_2">Fermer</a></span>
                            <span class="pull-right"><a class="btn btn-primary" id="btn_save_plannfication">Enregistrer</a></span>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('Js/parametrage/modules.js') }}"></script>
{% endblock %}